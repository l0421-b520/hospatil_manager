	LEFT JOIN tb_user_post up on up.userid = u.id
	LEFT JOIN tb_post p ON p.id = up.postid
	LEFT JOIN tb_dept_user du ON du.userid = u.id
	LEFT JOIN tb_dept d ON d.id = du.deptid
	GROUP BY u.id
  </select>

